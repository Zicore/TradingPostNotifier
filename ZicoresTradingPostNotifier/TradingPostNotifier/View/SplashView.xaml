<Window x:Class="ZicoresTradingPostNotifier.View.SplashView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon="/ZicoresTradingPostNotifier;component/icon.ico"
        Title="Zicore's - Trading Post - Notifier" Height="130" Width="660">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock TextWrapping="Wrap" Margin="4">
                <Run FontWeight="Bold" FontSize="18">Zicore's - Trading Post - Notifier</Run>
                <LineBreak></LineBreak>
                Official API Implemented :-) Have fun!
            </TextBlock>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="2">
                <Button FontSize="20" FontWeight="SemiBold" Margin="2" Width="180" Click="Button_GW2Spidy_Click">OK</Button>
                <Button FontSize="20" FontWeight="SemiBold" Margin="2" Width="180" Click="Button_TradingPost_Click">OK</Button>
                <Button FontSize="20" FontWeight="SemiBold" Margin="2" Width="180" Click="Button_Exit_Click">Exit</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
